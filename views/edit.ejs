<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <title>Editar Persona</title>
</head>
<body>

<main>
  <section class="container mt-3">
    <form action="/update" method="post" autocomplete="off">
      <div class="card">
        <div class="card-header">
          <a href="/" class="btn btn-sm btn-primary">Mostrar Lista</a>
        </div>


        <div class="card-body row g-3">
          
          <!-- Campo para el nombre -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= persona.nombre %>" required>
            <label for="nombre">Nombre</label>
          </div>

          <!-- Campo para el apellido paterno -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" id="apellido_p" name="apellido_p" value="<%= persona.apellido_p %>" required>
            <label for="apellido_p">Apellido Paterno</label>
          </div>

          <!-- Campo para el apellido materno -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" id="apellido_m" name="apellido_m" value="<%= persona.apellido_m %>" required>
            <label for="apellido_m">Apellido Materno</label>
          </div>

          <!-- Campo para el tipo de documento -->
          <div class="col-md-6 form-floating">
            <select class="form-select" id="tipo_d" name="tipo_d" required>
              <option value="DNI" {{ persona.tipo_d === 'DNI' ? 'selected' : '' }}>DNI</option>
              <option value="PASAPORTE" {{ persona.tipo_d === 'PASAPORTE' ? 'selected' : '' }}>Pasaporte</option>
              <option value="CARNET DE EXTRANJERIA" {{ persona.tipo_d === 'CARNET DE EXTRANJERIA' ? 'selected' : '' }}>Carnet de extranjería</option>
            </select>
            <label for="tipo_d">Tipo de Documento</label>
          </div>

          <!-- Campo para el DNI -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" id="dni" name="dni" value="<%= persona.dni %>" maxlength="9" required>
            <label for="dni">DNI</label>
          </div>

          <!-- Campo para el teléfono -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" id="telefono" name="telefono" value="<%= persona.telefono %>" maxlength="9" required>
            <label for="telefono">Teléfono</label>
          </div>

          <!-- Campo para la dirección -->
          <div class="col-md-12 form-floating">
            <input type="text" class="form-control" id="direccion" name="direccion" value="<%= persona.direccion %>" required>
            <label for="direccion">Dirección</label>
          </div>

        </div>

        <div class="card-footer text-end">
          <!-- Agregar un campo oculto para el ID -->
          <input type="hidden" name="id" value="<%= persona.id %>">
          <button class="btn btn-sm btn-primary" type="submit">Guardar</button>
          <a href="/" class="btn btn-sm btn-secondary">Cancelar</a>
        </div>
      </div>
    </form>
  </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
